/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer components {
    .pill {
        @apply bg-gray-80 border border-gray-70 inline-block text-lg px-2 py-1 rounded-lg touch-manipulation
    }
    .pill-icon{
        @apply text-xl text-teal-100 border border-teal-100 px-1.5 rounded-full
    }
    .multipill {
        @apply rounded-e-lg rounded-s-none
    }
}